@model BibliotecaMetropoli.Models.Recurso

@{
    ViewData["Title"] = "Búsqueda Avanzada";
}

<h1>Búsqueda Avanzada de Recursos</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Resultados" method="get">
            <div class="form-group">
                <label class="control-label">Autor</label>
                <input type="text" name="autor" class="form-control" placeholder="Ingrese nombre o apellido del autor" />
                <small class="form-text text-muted">Busca por nombre o apellido</small>
            </div>

            <div class="form-group">
                <label class="control-label">Palabras Clave</label>
                <input type="text" name="palabraClave" class="form-control" placeholder="Ingrese palabras clave" />
                <small class="form-text text-muted">Busca en el contenido de las palabras de búsqueda</small>
            </div>

            <div class="form-group">
                <label class="control-label">Editorial</label>
                <select name="idEdit" class="form-control">
                    <option value="">-- Todas las Editoriales --</option>
                    @foreach (var editorial in ViewBag.Editoriales)
                    {
                    <option value="@editorial.IdEdit">@editorial.Nombre</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label class="control-label">Tipo de Recurso</label>
                <select name="idTipoR" class="form-control">
                    <option value="">-- Todos los Tipos --</option>
                    @foreach (var tipo in ViewBag.TipoRecurso)
                    {
                    <option value="@tipo.IdTipoR">@tipo.Nombre</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<div class="alert alert-info mt-4" role="alert">
    <strong>Instrucciones:</strong> Puede buscar usando uno o más campos. Deje en blanco los campos que no desee usar en la búsqueda.
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}